  <script src="/assets/js/file-upload.js"></script>
  <script src="/assets/js/typeahead.js"></script>
  <script src="/assets/js/select2.js"></script>

  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <!-- End custom js for this page -->
  <script>
    let ProductData = document.getElementById("data-product");
    // console.log(ProductData.dataset.productdata, typeof(ProductData.dataset.productdata));
    ProductData = JSON.parse(ProductData.dataset.productdata);

    const ProductForm = document.getElementById("productForm");
    const ProductName = document.getElementById("product-name");
    const ProductDescription = document.getElementById("description");
    const ProductPrice = document.getElementById("price");
    const ProductPhoto = document.getElementById("productImage");
    const ProductPhotoView = document.getElementById("photoProductView");

    ProductForm.action = `/dashboard/updateproduct?productId=${ProductData.productId}`
    ProductName.value = ProductData.title;
    ProductDescription.value = ProductData.description;
    ProductPrice.value = ProductData.price;
    ProductPhoto.value = ProductData.image;
    ProductPhotoView.src = ProductData.image;
  </script>
  <script>
    function Confirmation(cb) {
      Swal.fire({
        title: "Are you sure?",
        text: "You won't be able to revert this!",
        icon: "warning",
        showCancelButton: true,
        confirmButtonColor: "#3085d6",
        cancelButtonColor: "#d33",
        confirmButtonText: "Yes, update it?"
      }).then((result) => {
        cb(result.isConfirmed);
      });
    }
    function SuccessNotif(cb) {

    }
    document.addEventListener('DOMContentLoaded', function () {
        let imageChanged = false;
        const fileInput = document.getElementById('file-upload');
        const formData = new FormData();
        // Add an event listener to trigger the file upload when a file is selected
        fileInput.addEventListener('change', (event) => {
          imageChanged = true;
            const file = event.target.files[0];
            console.log(file);
            formData.append('productImage', file);
        });

        var form = document.getElementById('productForm');

        form.addEventListener('submit', function (event) {
            event.preventDefault(); // Mencegah pengiriman form default
            Confirmation((isConfirmed) => {
              if (isConfirmed) {
                if (imageChanged) {
                  testUpload(); // Panggil fungsi yang diinginkan
                  console.log('test', fileInput.value);
                } else {
                  handleResponse();
                }
              }
            });

            // Setelah testUpload dijalankan, jika Anda ingin melanjutkan pengiriman form:
            // form.submit();
        });

        const handleResponse = (data) => {
            if (data) {
              console.log(fileInput.value);
              if (data.ProductPicture) {
                  console.log(data.ProductPicture);
                  // fileInput.accept = '*'
                  // fileInput.value = data.ProductPicture;
                  // Asumsikan response berisi nama file atau path file yang diunggah
                  let hiddenInput = document.createElement('input');
                  hiddenInput.type = 'hidden';
                  hiddenInput.name = 'productImageHidden';
                  hiddenInput.value = data.ProductPicture; // Atau URL dari file yang diunggah

                  // Tambahkan input tersembunyi ke form
                  form.appendChild(hiddenInput);
                  console.log(fileInput.value);
                  // Update the profile picture URL and set it as the src attribute of the image element
                  // profilePicture.src = data.profilePictureUrl;
              }
            }
            // Setelah testUpload dijalankan, jika Anda ingin melanjutkan pengiriman form:
            Swal.fire({
              title: "Updated!",
              text: `Product with ID = ${ProductData.productId} has been updated`,
              icon: "success"
            }).then((res) => {
              form.submit();
            });
        };

        function testUpload() {
            // Make a POST request to upload the file
            fetch('/dashboard/upload', {
                method: 'POST',
                body: formData
            })
                .then(response => response.json())
                .then(handleResponse)
                .catch(error => console.error('Error:', error));
        }
    });

</script>
</body>

</html>