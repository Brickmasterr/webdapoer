  <script>
    function unsafetoHtml(html) {
      // Replace <br> tags with newlines
      const text = html.replace(/<br\s*\/?>/g, '\n');

      // Undo HTML escaping
      const unescapedText = text
          .replace(/&lt;/g, '<')
          .replace(/&gt;/g, '>')
          .replace(/&quot;/g, '"')
          .replace(/&#039;/g, "'")
          .replace(/&amp;/g, '&');

      return unescapedText;
    }
  </script>
  <script>
    function DeleteConfirmation(ProductId) {
      Swal.fire({
        title: "Are you sure?",
        text: "You won't be able to revert this!",
        icon: "warning",
        showCancelButton: true,
        confirmButtonColor: "#3085d6",
        cancelButtonColor: "#d33",
        confirmButtonText: "Yes, delete it!"
      }).then((result) => {
        if (result.isConfirmed) {
          fetch(`/dashboard/deletelayanan?layananId=${ProductId}`, {
              method: 'POST'
          })
              .then(response => response.json())
              .then((data) => {
                Swal.fire({
                  title: "Deleted!",
                  text: data.message,
                  icon: "success"
                }).then((res) => {
                  location.reload();
                });
              })
              .catch(error => console.error('Error:', error));
        }
      });
    }
